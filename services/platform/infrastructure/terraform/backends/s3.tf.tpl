# S3 Backend Configuration Template
# Generated by PRAHO Node Deployment Service
#
# TODO: S3_BACKEND - This template is prepared for future S3 state storage
# Enable by setting node_deployment.terraform_state_backend = "s3" in settings
#
# Prerequisites:
# - S3 bucket must exist
# - DynamoDB table for state locking (optional but recommended)
# - AWS credentials configured

terraform {
  backend "s3" {
    bucket         = "${s3_bucket}"
    key            = "${s3_key}"
    region         = "${s3_region}"
    encrypt        = true

    # Optional: Enable state locking with DynamoDB
    # dynamodb_table = "praho-terraform-locks"
  }
}
