# =============================================================================
# PRAHO Management Servers - Example Terraform Variables
# =============================================================================
# Copy to terraform.tfvars and fill in values.
# Do NOT commit terraform.tfvars (it's gitignored).
#
# Alternatively, use environment variables:
#   export TF_VAR_hcloud_token="your-token"
#   export TF_VAR_ssh_public_key="ssh-ed25519 AAAA..."

# Hetzner Cloud API token (required)
# hcloud_token = "your-hetzner-cloud-api-token"

# Environment: dev | staging | prod
environment = "dev"

# SSH public key for server access (required)
# ssh_public_key = "ssh-ed25519 AAAA... user@host"

# Base domain for reverse DNS
domain = "pragmatichost.com"

# Datacenter location (fsn1 = Falkenstein, Germany â€” closest to Romania)
location = "fsn1"

# Server OS image
server_image = "ubuntu-22.04"

# Override server types (optional, defaults based on environment)
# platform_server_type = "cpx31"
# portal_server_type = "cpx21"

# Restrict SSH access to specific IPs (optional)
# firewall_ssh_sources = ["1.2.3.4/32", "5.6.7.8/32"]
