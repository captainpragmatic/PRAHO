# PRAHO Caddy Configuration (Native)
# Generated by Ansible - DO NOT EDIT

{{ domain }} {
    tls {{ acme_email }}

    # Security headers
    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        -Server
    }

    # Compression
    encode gzip zstd

    # Static files (immutable cache)
    handle_path /static/* {
        root * {{ project_root }}/static
        file_server
        header Cache-Control "public, max-age=31536000, immutable"
    }

    # Media files
    handle_path /media/* {
        root * {{ project_root }}/media
        file_server
        header Cache-Control "public, max-age=86400"
    }

    # Platform routes → localhost:{{ platform_port }}
    handle /admin/* {
        reverse_proxy localhost:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /api/* {
        reverse_proxy localhost:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /dashboard/* {
        reverse_proxy localhost:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /health/* {
        reverse_proxy localhost:{{ platform_port }}
    }

    handle /users/* {
        reverse_proxy localhost:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Portal (default catch-all) → localhost:{{ portal_port }}
    handle {
        reverse_proxy localhost:{{ portal_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Access log
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 5
        }
    }
}
