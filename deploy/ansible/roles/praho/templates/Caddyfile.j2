# PRAHO Caddy Configuration
# Generated by Ansible

{{ domain }} {
    tls {{ acme_email }}

    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    encode gzip zstd

{% if deploy_platform %}
    handle_path /static/* {
        root * /srv/static
        file_server
        header Cache-Control "public, max-age=31536000, immutable"
    }

    handle_path /media/* {
        root * /srv/media
        file_server
        header Cache-Control "public, max-age=86400"
    }

    handle /admin/* {
        reverse_proxy platform:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /api/* {
        reverse_proxy platform:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /dashboard/* {
        reverse_proxy platform:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /health/* {
        reverse_proxy platform:{{ platform_port }}
    }
{% endif %}

{% if deploy_portal %}
    handle_path /portal-static/* {
        root * /srv/portal-static
        file_server
        header Cache-Control "public, max-age=31536000, immutable"
    }

    handle /portal-health/* {
        reverse_proxy portal:{{ portal_port }}
    }

    handle {
        reverse_proxy portal:{{ portal_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
{% elif deploy_platform %}
    handle {
        reverse_proxy platform:{{ platform_port }} {
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
{% endif %}

    log {
        output file /data/access.log {
            roll_size 100mb
            roll_keep 5
        }
    }
}
