# PRAHO Docker Compose Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

services:
{% if deploy_database %}
  db:
    image: postgres:15-alpine
    container_name: praho_db
    environment:
      POSTGRES_DB: {{ db_name }}
      POSTGRES_USER: {{ db_user }}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - {{ backup_directory }}:/backups
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ db_user }} -d {{ db_name }}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - internal
{% endif %}

{% if deploy_platform %}
  platform:
    image: ${REGISTRY:-}praho-platform:${VERSION:-latest}
    container_name: praho_platform
    environment:
      - DEBUG=0
      - DATABASE_URL=${DATABASE_URL}
      - SECRET_KEY=${SECRET_KEY}
      - DJANGO_SETTINGS_MODULE=config.settings.prod
      - ALLOWED_HOSTS=${DOMAIN},platform
      - CSRF_TRUSTED_ORIGINS=https://${DOMAIN}
      - SERVICE_NAME=platform
    volumes:
      - static_files:/app/staticfiles
      - media_files:/app/media
      - logs:/app/logs
{% if deploy_database %}
    depends_on:
      db:
        condition: service_healthy
{% endif %}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ platform_port }}/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - internal
      - web
{% endif %}

{% if deploy_portal %}
  portal:
    image: ${REGISTRY:-}praho-portal:${VERSION:-latest}
    container_name: praho_portal
    environment:
      - DEBUG=0
      - PLATFORM_API_BASE_URL=${PLATFORM_API_BASE_URL}
      - SECRET_KEY=${SECRET_KEY}
      - DJANGO_SETTINGS_MODULE=config.settings
      - ALLOWED_HOSTS=${DOMAIN},portal
      - CSRF_TRUSTED_ORIGINS=https://${DOMAIN}
      - SERVICE_NAME=portal
    volumes:
      - portal_static:/app/staticfiles
      - portal_logs:/app/logs
{% if deploy_platform %}
    depends_on:
      platform:
        condition: service_healthy
{% endif %}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ portal_port }}/health/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s
    networks:
      - web
{% endif %}

{% if deploy_caddy %}
  caddy:
    image: caddy:2-alpine
    container_name: praho_caddy
    ports:
      - "80:80"
      - "443:443"
      - "443:443/udp"
    environment:
      - DOMAIN=${DOMAIN}
      - ACME_EMAIL=${ACME_EMAIL}
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
{% if deploy_platform %}
      - static_files:/srv/static:ro
      - media_files:/srv/media:ro
{% endif %}
{% if deploy_portal %}
      - portal_static:/srv/portal-static:ro
{% endif %}
    restart: unless-stopped
    networks:
      - web
{% endif %}

networks:
  internal:
    driver: bridge
  web:
    driver: bridge

volumes:
{% if deploy_database %}
  postgres_data:
{% endif %}
{% if deploy_platform %}
  static_files:
  media_files:
  logs:
{% endif %}
{% if deploy_portal %}
  portal_static:
  portal_logs:
{% endif %}
{% if deploy_caddy %}
  caddy_data:
  caddy_config:
{% endif %}
