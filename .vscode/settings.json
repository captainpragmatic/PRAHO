{
  // ===============================================================================
  // VS CODE SETTINGS - PRAHO PLATFORM
  // ===============================================================================
  // Prevents auto-formatting from breaking Django templates
  // Django template-specific settings
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "prettier.enable": false,
    "beautify.ignore": [
      "django-html"
    ]
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "prettier.enable": false
  },
  // Python-specific settings (safe to format, strategic type checking)
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  // JavaScript/CSS (safe to format)  
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // General editor settings
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  // File associations
  "files.associations": {
    "*.html": "django-html",
    "**/templates/**/*.html": "django-html"
  },
  // Extensions recommendations
  "extensions.recommendations": [
    "ms-python.python",
    "ms-python.black-formatter",
    "batisteo.vscode-django",
    "wholroyd.jinja"
  ],
  // HTML validation (but don't auto-fix)
  "html.validate.styles": false,
  "html.validate.scripts": false,
  // Prettier configuration
  "prettier.documentSelectors": [
    "!**/*.html"
  ],
  // Emmet (but careful with Django templates)
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "emmet.excludeLanguages": [
    "html"
  ],
  "makefile.configureOnOpen": false,
  
  // Terminal auto-approve settings for common development commands
  "chat.tools.terminal.autoApprove": {
    "/^make\\s+test(\\s|$)/": true,
    "/^make\\s+test-fast(\\s|$)/": true,
    "/^make\\s+test-file(\\s|$)/": true,
    "/^make\\s+test-e2e(\\s|$)/": true,
    "/^make\\s+test-with-e2e(\\s|$)/": true,
    "/^make\\s+lint(\\s|$)/": true,
    "/^make\\s+lint-security(\\s|$)/": true,
    "/^make\\s+lint-credentials(\\s|$)/": true,
    "/^make\\s+lint-performance(\\s|$)/": true,
    "/^make\\s+lint-fix(\\s|$)/": true,
    "/^make\\s+dev(\\s|$)/": true,
    "/^\\.venv\\/bin\\/ruff\\s+/": true,
    "/^git\\s+status(\\s|$)/": true,
    "/^git\\s+log(\\s|$)/": true,
    "/^git\\s+diff(\\s|$)/": true,
    "/^git\\s+ls-files(\\s|$)/": true,
    "/^python\\s+manage\\.py\\s+test(\\s|$)/": true,
    "/^python\\s+manage\\.py\\s+runserver(\\s|$)/": true,
    "/^source\\s+\\.venv\\/bin\\/activate(\\s|$)/": true,
    "/^\\.venv\\/bin\\/pytest\\s+tests\\/e2e\\/(\\s|$)/": true,
    "/^\\.venv\\/bin\\/python\\s+-m\\s+pytest\\s+tests\\/e2e\\/(\\s|$)/": true,
    "/^playwright\\s+install(\\s|$)/": true,
    "/^playwright\\s+test(\\s|$)/": true,
    "/^\\.venv\\/bin\\/playwright\\s+/": true,
    "/^head\\s+/": true,
    "/^tail\\s+/": true,
    "/^cat\\s+/": true,
    "/^ls\\s+/": true,
    "/^grep\\s+/": true
  },
  // ===============================================================================
  // STRATEGIC TYPE CHECKING CONFIGURATION - Post ADR-0008
  // ===============================================================================
  // Aligned with ADR-0008: MyPy removal strategy
  // Focus on Romanian business features over strict type checking
  
  "python.analysis.typeCheckingMode": "basic",
  
  // Strategic diagnostic filtering (focus on critical issues only)
  "python.analysis.diagnosticSeverityOverrides": {
    // CRITICAL: Keep these errors (runtime safety)
    "reportMissingImports": "error",
    "reportUndefinedVariable": "error",
    "reportImportCycles": "warning",
    "reportMissingTypeStubs": "warning",
    
    // STRATEGIC IGNORE: Complex Django typing (per ADR-0008)
    "reportGeneralTypeIssues": "none",
    "reportOptionalMemberAccess": "none",
    "reportOptionalSubscript": "none",
    "reportOptionalOperand": "none",
    "reportOptionalCall": "none",
    "reportOptionalIterable": "none",
    "reportOptionalContextManager": "none",
    "reportTypedDictNotRequiredAccess": "none",
    "reportPrivateImportUsage": "none",
    "reportUnknownArgumentType": "none",
    "reportUnknownLambdaType": "none",
    "reportUnknownMemberType": "none",
    "reportUnknownParameterType": "none",
    "reportUnknownVariableType": "none",
    "reportUntypedBaseClass": "none",
    "reportUntypedClassDecorator": "none",
    "reportUntypedFunctionDecorator": "none",
    "reportUntypedNamedTuple": "none"
  },
  
  // Python interpreter and environment
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.terminal.activateEnvironment": true,
  
  // REMOVED: MyPy integration (per ADR-0008)
  "python.linting.enabled": true,
  
  // Type checking enhancements
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.extraPaths": [
    "./apps",
    "./config"
  ],
  
  // Ruff integration (strategic linting only)
  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": ".venv/bin/ruff",
  
  // Type hint visibility and inline hints
  "editor.inlayHints.enabled": "on",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.inlayHints.parameterNames": true,
  
  // Error and warning display
  "problems.showCurrentInStatus": true,
  "editor.showDeprecated": true,
  "editor.showUnused": true,
  
  // Enhanced testing configuration
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "test_*.py"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  
  // PRAHO Platform specific enhancements
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "XXX",
    "CUI",
    "VAT",
    "GDPR",
    "INVOICE",
    "SECURITY"
  ],
  "todo-tree.highlights.customHighlight": {
    "CUI": {
      "icon": "ðŸ‡·ðŸ‡´",
      "foreground": "#ff6b6b"
    },
    "VAT": {
      "icon": "ðŸ’°",
      "foreground": "#4ecdc4"
    },
    "SECURITY": {
      "icon": "ðŸ”’",
      "foreground": "#ffe66d"
    }
  }
}
