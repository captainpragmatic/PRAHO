{
  // ===============================================================================
  // VS CODE SETTINGS - PRAHO PLATFORM
  // ===============================================================================
  // Prevents auto-formatting from breaking Django templates
  // Django template-specific settings
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "prettier.enable": false,
    "beautify.ignore": [
      "django-html"
    ]
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "prettier.enable": false
  },
  // Python-specific settings (safe to format)
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  // JavaScript/CSS (safe to format)  
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // General editor settings
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  // File associations
  "files.associations": {
    "*.html": "django-html",
    "**/templates/**/*.html": "django-html"
  },
  // Extensions recommendations
  "extensions.recommendations": [
    "ms-python.python",
    "ms-python.black-formatter",
    "batisteo.vscode-django",
    "wholroyd.jinja"
  ],
  // HTML validation (but don't auto-fix)
  "html.validate.styles": false,
  "html.validate.scripts": false,
  // Prettier configuration
  "prettier.documentSelectors": [
    "!**/*.html"
  ],
  // Emmet (but careful with Django templates)
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "emmet.excludeLanguages": [
    "html"
  ],
  "makefile.configureOnOpen": false,
  
  // Terminal auto-approve settings for common development commands
  "chat.tools.terminal.autoApprove": {
    "/^make\\s+test(\\s|$)/": true,
    "/^make\\s+test-fast(\\s|$)/": true,
    "/^make\\s+test-e2e(\\s|$)/": true,
    "/^make\\s+test-with-e2e(\\s|$)/": true,
    "/^make\\s+lint(\\s|$)/": true,
    "/^make\\s+lint-security(\\s|$)/": true,
    "/^make\\s+lint-credentials(\\s|$)/": true,
    "/^make\\s+lint-performance(\\s|$)/": true,
    "/^make\\s+lint-fix(\\s|$)/": true,
    "/^make\\s+dev(\\s|$)/": true,
    "/^\\.venv\\/bin\\/ruff\\s+/": true,
    "/^git\\s+status(\\s|$)/": true,
    "/^git\\s+log(\\s|$)/": true,
    "/^git\\s+diff(\\s|$)/": true,
    "/^python\\s+manage\\.py\\s+test(\\s|$)/": true,
    "/^python\\s+manage\\.py\\s+runserver(\\s|$)/": true,
    "/^source\\s+\\.venv\\/bin\\/activate(\\s|$)/": true,
    "/^\\.venv\\/bin\\/pytest\\s+tests\\/e2e\\/(\\s|$)/": true,
    "/^\\.venv\\/bin\\/python\\s+-m\\s+pytest\\s+tests\\/e2e\\/(\\s|$)/": true,
    "/^playwright\\s+install(\\s|$)/": true,
    "/^playwright\\s+test(\\s|$)/": true,
    "/^\\.venv\\/bin\\/playwright\\s+/": true,
    "/^head\\s+/": true,
    "/^tail\\s+/": true,
    "/^cat\\s+/": true,
    "/^ls\\s+/": true,
    "/^grep\\s+/": true
  },
  "python.analysis.typeCheckingMode": "standard"
}
